<!DOCTYPE html>
<html>
  <head>
    <title>DulyNoted</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= display_meta_tags site: 'Duly Noted' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
    <% if flash[:success].present?%>
      <div class="success">
        <%= flash[:success]%>
      </div>
    <% end %>

    <% if flash[:error].present?%>
      <div class="error">
        <%= flash[:error]%>
      </div>
    <% end %>
    <%= yield %>

    <%= javascript_include_tag 'application' %>


  </body>
</html>
