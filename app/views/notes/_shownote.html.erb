  <div class="shownote">
    <h1><%= simple_format @note.body%></h1>
  </div>

  <footer>
    <div class="container">
      <% if session[:notes].present? and session[:notes].include?(@note.id)%>
        <div class="actions">
            <%= link_to "Edit this note", edit_note_path(@note)%>
            <p>Created <%= time_ago_in_words @note.created_at %> ago</p>
            <%= link_to "Delete this note", note_path(@note), method: :delete, data: {confirm: "Are you sure??"} %>
        </div>
      <% else %>
        <div class="show">
          <p>Created <%= time_ago_in_words @note.created_at %> ago</p>
        </div>
      <% end %>
    </div>
  </footer>
