<header>
  <%= link_to 'View All Notes', all_path %>
  <%= link_to 'Leave A Note', root_path %>
</header>

<div class="note">
  <h2><%= @note.body %></h2>

</div>



      <p class="posted">Created <%= time_ago_in_words @note.created_at %> ago</p>









  <div class="actions">
    <% if @note.created_at > 5.minutes.ago %>
      <%= link_to "Edit this note", edit_note_path(@note)%>
      <%= link_to "Delete this note", note_path(@note), method: :delete, data: {confirm: "Are you sure??"} %>
      <% end %>
  </div>
