
  <header>
    <div class="container">
      <%= link_to 'Random', random_path%>
      <%# <h1><%= link_to 'Home', root_path%></h1> %>
      <h3>Leave A Note</h3>
      <%= link_to 'New', root_path%>
    </div>
  </header>

  <div class="allnotes">
    <% @notes.order('created_at desc').each do |note| %>

      <%=link_to note_path(note) do %>
        <div class="notes desktop">
          <h2> <%= simple_format truncate(note.body, :length => 100) %> </h2>
        </div>
        <div class="notes mobile">
          <h2> <%= simple_format truncate(note.body, :length => 25) %> </h2>
        </div>
      <% end %>

    <% end %>
  </div>

  <%= render 'footer' %>
